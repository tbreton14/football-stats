<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
        <meta name="robots" content="index, follow">
        <title>{% block title %}{% endblock %}</title>
        <link rel="icon" type="image/x-icon" href="{{ asset('images/logo-usonm.jpg') }}">

        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}
    </head>
    <body>
        {% block body %}
            <div class="container">
                <div class="row header d-flex align-items-center justify-content-center">
                    <a href="{{ path('app_home') }}" class="d-flex align-items-center justify-content-center">
                        <img src="{{ asset('images/logo-usonm-top.png') }}" class="img-fluid" alt="usonm">
                    </a>
                </div>

                <div class="row content {% block content_class %}{% endblock content_class %}">
                    {% block content %}

                    {% endblock content %}
                </div>

            </div>
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </body>
</html>
